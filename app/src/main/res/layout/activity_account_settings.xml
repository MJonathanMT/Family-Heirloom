<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_alt_1"
    tools:context=".AccountSettings">

    <TextView
        android:id="@+id/textView_account_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="68dp"
        android:text="Account Settings"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button_update_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_update_details"
        android:layout_width="210dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"

        android:layout_marginBottom="24dp"
        android:background="@drawable/custom_button"
        android:text="Update Details"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_account_settings" />

    <Button
        android:id="@+id/button6"
        android:layout_width="210dp"
        android:layout_height="54dp"
        android:layout_marginStart="100dp"

        android:layout_marginEnd="101dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/custom_button"
        android:text="Security and Privacy"
        app:layout_constraintBottom_toTopOf="@+id/button_log_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_update_details" />

    <Button
        android:id="@+id/button_log_out"
        android:layout_width="210dp"
        android:layout_height="54dp"
        android:layout_marginStart="100dp"

        android:layout_marginEnd="101dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/custom_button"
        android:text="Log Out"
        app:layout_constraintBottom_toTopOf="@+id/textView_family_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <TextView
        android:id="@+id/textView_family_settings"
        android:layout_width="274dp"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="69dp"
        android:text="Family Settings"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/button_change_current_family"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_log_out" />

    <Button
        android:id="@+id/button_change_current_family"
        android:layout_width="210dp"
        android:layout_height="54dp"

        android:layout_marginStart="100dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="101dp"
        android:background="@drawable/custom_button"
        android:text="Change Current Family"
        app:layout_constraintBottom_toTopOf="@+id/button_add_family"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_family_settings" />

    <Button
        android:id="@+id/button_add_family"
        android:layout_width="210dp"
        android:layout_height="54dp"

        android:layout_marginStart="100dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/custom_button"
        android:text="Add Family"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_change_current_family" />
</androidx.constraintlayout.widget.ConstraintLayout>