<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_alt_2"
    tools:context=".FamilySetup">

    <TextView
        android:id="@+id/textView_request_ack"
        android:layout_width="217dp"
        android:layout_height="62dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="30dp"
        android:text="Family Setup"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="202dp"
        android:layout_height="27dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="21dp"
        android:text="Is your family group registered?"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/button_to_create_family_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_request_ack" />

    <Button
        android:id="@+id/button_to_join_family_group"
        android:layout_width="184dp"
        android:layout_height="55dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="288dp"

        android:background="@drawable/custom_button"
        android:text="Join Existing Family"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_to_create_family_group" />

    <Button
        android:id="@+id/button_to_create_family_group"
        android:layout_width="184dp"
        android:layout_height="55dp"
        android:layout_marginStart="118dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_button"
        android:text="Create New Family"
        app:layout_constraintBottom_toTopOf="@+id/button_to_join_family_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>