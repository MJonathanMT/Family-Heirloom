<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestFamilyGroup">

    <TextView
        android:id="@+id/textView_request_ack"
        android:layout_width="313dp"
        android:layout_height="36dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="257dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="monospace"
        android:text="Request Sent to <Family ID>"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_confirmation_ack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_confirmation_ack"
        android:layout_width="296dp"
        android:layout_height="27dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="50dp"
        android:text="Check your email for confirmation"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button_to_home_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_request_ack" />

    <Button
        android:id="@+id/button_to_home_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="243dp"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_confirmation_ack" />

</androidx.constraintlayout.widget.ConstraintLayout>